<h1>Edit a Pal</h1>

<form action= "/pals/<%= @pal.id  %>" method="post">

  <label for="name">Name:</label>
  <input type="text" name="name" value="<%= @pal.name %>">

  <label for="type">Type:</label>
  <select name="type">
    <option value="Budget" <%= "selected" if @pal.type() == "Budget" %>>Budget</option>
    <option value="Classic" <%= "selected" if @pal.type() == "Classic" %>>Classic</option>
    <option value="Deluxe" <%= "selected" if @pal.type() == "Deluxe" %>>Deluxe</option>
  </select>

  <label for="point_worth">Point worth:</label>
  <input type="number" name="point_worth" value="<%= @pal.point_worth %>">

  <input type="hidden" name="_method" value="put">
  
  <input type='submit' value="Update details">
</form>
