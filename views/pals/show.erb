<h2>Pal Profile:</h2>

<p><b>Name:</b>
<%= @pal.name() %></p>

<p><b>Type:</b>
<%= @pal.type() %></p>

<p><b>Point worth:</b>
<%= @pal.point_worth() %></p>

<a class="button2" href="/pals/<%= @pal.id %>/edit">edit</a>
<br><br>
<hr>

<b>Current Clients:</b>
<br><br>
<% @pal.clients.each do |client| %>
  <a href="/clients/<%= client.id %>"><%= client.name %></a>
<br><br>
<% end %>

<a href="/"><img src="/images/home.png" style="width:50px; height:50px"></a>

<br><br>
<form actions="/pals/<%= @pal.id %>" method="post">
  <input type="submit" value="Delete profile"/>
  <input name="_method" type="hidden" value="Delete"/>
</form>