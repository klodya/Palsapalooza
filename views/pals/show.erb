<h1>Pal Profile:</h1>

<div class="grid-profile">
<h4>Name:
<%= @pal.name() %></h4>

<h5>Type:</b>
<%= @pal.type() %></h5>

<h5>Point worth:</b>
<%= @pal.point_worth() %></h5>

<a class="button2" href="/pals/<%= @pal.id %>/edit">edit</a>
</div>

<div class="grid-profile">
<h4>Current Clients:</h4>
<h5><% @pal.clients.each do |client| %>
  <a href="/clients/<%= client.id %>"><%= client.name %></a>
  <br><br>
<% end %>
</h5></div>
<img src="/images/profile.png" style="width:100px; height:100px"> 
<br><br>
<a href="/"><img src="/images/home.png" style="width:50px; height:50px"></a>

<br><br>
<form actions="/pals/<%= @pal.id %>" method="post">
  <input type="submit" value="Delete profile"/>
  <input name="_method" type="hidden" value="Delete"/>
</form>